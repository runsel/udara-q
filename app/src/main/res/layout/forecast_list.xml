<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/hourlyCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:layout_marginTop="7dp"
        app:contentPadding="25dp"
        app:cardBackgroundColor="@color/whiteBackground"
        app:cardCornerRadius="16dp"
        app:cardPreventCornerOverlap="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/forecastDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/primaryText"
                android:textSize="16sp"
                android:text="Wednesday"/>
            <ImageView
                android:id="@+id/forecastIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_toLeftOf="@+id/forecastPredict"
                android:scaleType="fitXY"
                android:src="@drawable/ic_hujan"/>
            <TextView
                android:id="@+id/forecastPredict"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/forecastTemp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/primaryText"
                android:textSize="16sp"
                android:text="Rain"/>
            <TextView
                android:id="@+id/forecastTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="50dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/primaryText"
                android:textSize="16sp"
                android:textAllCaps="true"
                android:text="24 C "/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
